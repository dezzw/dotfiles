# open application
cmd - return : open /Applications/iTerm.app
cmd - e : emacsclient -s daemon -c -n -a ""
shift + cmd - e: emacs
cmd - b : open /Applications/Google\ Chrome.app


# --- Window Management ---
#            k
#            ^
#        h <   > l
#            v
#            j
# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# move managed window
cmd + ctrl - h : yabai -m window --warp west
cmd + ctrl - j : yabai -m window --warp south
cmd + ctrl - k : yabai -m window --warp north
cmd + ctrl - l : yabai -m window --warp east

# balance size of windows
shift + ctrl - b : yabai -m space --balance

# toggle window native fullscreen
shift + ctrl - f : yabai -m window --toggle native-fullscreen

# make floating window fill screen
shift + ctrl - up : yabai -m window --grid 1:1:0:0:1:1

# float / unfloat window and center on screen
shift + ctrl - t : yabai -m window --toggle float;\
               	 yabai -m window --grid 4:4:1:1:2:2

# toggle sticky(+float), topmost, picture-in-picture
shift + ctrl - p : yabai -m window --toggle sticky;\
               	   yabai -m window --toggle topmost;\
          	   yabai -m window --toggle pip

# toggle window split type
shift + ctrl - e : yabai -m window --toggle split
# --- End Window Managing ---

# --- Space Management
# fast focus desktop/space
cmd - r : yabai -m space --focus recent
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - n : yabai -m space --focus next || yabai -m space --focus first
cmd - p : yabai -m space --focus prev || yabai -m space --focus last

# send window to desktop and follow focus
alt + cmd - n : yabai -m window --space next; yabai -m space --focus next
alt + cmd - 1 : yabai -m window --space 1; yabai -m space --focus 1
alt + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
alt + cmd - 3 : yabai -m window --space 3; yabai -m space --focus 3
alt + cmd - p : yabai -m window --space prev; yabai -m space --focus prev
  