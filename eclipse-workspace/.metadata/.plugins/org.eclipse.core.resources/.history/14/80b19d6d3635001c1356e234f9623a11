package lab05;

import java.util.*;

public class StockTrader implements Observer{

	private Observable subject;
	private HashMap<String, Double> observableState;
	
	public StockTrader() {
		this.observableState = new HashMap<>();
	}
	
	public StockTrader(Observable subject) {
		this.subject = subject;
		this.subject.register(this);
	}
	
	@Override
	public void update(HashMap<String, Double> newData) {
		this.observableState = newData;
	}
	
	public double getStockPrice(String stock) {
		if (!this.observableState.isEmpty() && this.observableState.containsKey(stock)) {
			return this.observableState.get(stock);
		}
		return -1;
	}

}
