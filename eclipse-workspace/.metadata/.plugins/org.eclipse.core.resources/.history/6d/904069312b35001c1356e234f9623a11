package lab05;

public class StockTrader implements Observer{

	private Observable server;
	
	public StockTrader(Observable server) {
		this.server = server;
		this.server.register(this);
	}
	
	@Override
	public void update() {
		System.out.println("The stock information has been updated!");
	}
	
	public double getStockPrice(String stock) {
		String[] stockInfo = ((StockService)  this.server).getStockInfo(stock);
		return Double.parseDouble(stockInfo[1]);
	}

}
