package question4;

public class SendMessage {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		MailingList campuses = new MailingList();
		MailingList faculties = new MailingList();
		Student[] st = new Student[5];
		for (int i=0; i < 5; i++)
			st[i] = new Student();
		UniversityUnit artsci = new UniversityUnit();
		UniversityUnit eng = new UniversityUnit();
		UniversityUnit utsg = new UniversityUnit();
		UniversityUnit utm = new UniversityUnit();
		UniversityUnit uoft = new UniversityUnit();
		artsci.addMember(st[0]);
		artsci.addMember(st[1]);
		eng.addMember(st[2]);
		utsg.addMember(artsci);
		utsg.addMember(eng);
		utm.addMember(st[3]);
		uoft.addMember(utsg);
		uoft.addMember(utm);
		faculties.attach(artsci);
		faculties.attach(eng);
		campuses.attach(utsg);
		campuses.attach(utm);
		campuses.notifyObservers("hello to all campuses");
		faculties.notifyObservers("hello to faculties");
	}

}
