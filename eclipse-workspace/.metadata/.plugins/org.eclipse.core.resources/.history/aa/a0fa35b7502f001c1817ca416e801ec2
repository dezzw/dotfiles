package assignment1;

import java.util.Scanner;
import java.util.Stack;

import assignment1.Exceptions.InvalidMoveException;

public class TESTStack {

    static Stack<Integer> stack = new Stack<Integer>();

    public static void main(String[] args) {
    	int fromRow, fromCol, toRow, toCol;
    	Move newMove;
    	
    	Scanner scanner = new Scanner(System.in);
		System.out.print("Please input your fromCell (e.g. colraw, E2): ");
		String fromCell = scanner.next();
		System.out.print("Please input your toCell (e.g. colraw, E2): ");
		String toCell = scanner.next();
		try {
			fromRow = Utils.convertCharToInt(fromCell.charAt(0));
			fromCol = Utils.convertCharIntToInt(fromCell.charAt(1));
			toRow = Utils.convertCharToInt(toCell.charAt(0));
			toCol = Utils.convertCharIntToInt(toCell.charAt(1));
			System.out.println("(" + fromRow + "" + fromCol + ")" + "->" +"(" + toRow + "" + toCol + ")");
//			newMove = new Move(new Cell(new Coordinate(fromRow, fromCol)), new Cell(new Coordinate(toRow, toCol)));
//			System.out.println(newMove);
		} catch (InvalidMoveException e) {
			System.out.println("Not an Invalid Move");
		}
		scanner.close();
    }
}
