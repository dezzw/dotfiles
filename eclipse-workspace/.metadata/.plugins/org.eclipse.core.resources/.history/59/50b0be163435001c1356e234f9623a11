package lab05;

import java.util.*;

public class StockTrader implements Observer{

	private HashMap<String, Double> stocksInfo = new HashMap<>();
	
	@Override
	public void update(HashMap<String, Double> newData) {
		this.stocksInfo = newData;
		System.out.println("The stock information has been updated!");
	}
	
	public double getStockPrice(String stock) {
		if (!this.stocksInfo.isEmpty() && this.stocksInfo.containsKey(stock)) {
			return this.stocksInfo.get(stock);
		}
		return -1;
	}

}
