" Set leader key
let mapleader = " "

set multiple-cursors
set surround
set easymotion
set commentary
set ReplaceWithRegister
set exchange
set textobj-entire

" Keep 5 lines below
set so=5

" Change the key to move
nnoremap <silent> t l
nnoremap <silent> n j
nnoremap <silent> p k

" Quit every mode
" insert mode
inoremap jk <Esc>
inoremap <C-g> <Esc>
" visual mode
vnoremap jk <Esc>
vnoremap <C-g> <Esc>

" Move forward one character
inoremap JK <ESC>la

" Move to the start of line
nnoremap H ^

" Move to the end of line
nnoremap L $

" Run the code
:map <leader>r <Action>(Run)

" Format the code
:map \r <Action>(ReformatCode)